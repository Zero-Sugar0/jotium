{
  "servers": [
    {
      "name": "supabase-mcp",
      "transport": "stdio",
      "command": "node",
      "args": ["./node_modules/@supabase/mcp-server-supabase/dist/index.js"],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "YOUR_API_KEY_HERE"
      }
    },
    {
      "name": "context7-mcp",
      "transport": "stdio",
      "command": "node",
      "args": ["./node_modules/@upstash/context7-mcp/dist/index.js"],
      "env": {
        "CONTEXT7_API_KEY": "YOUR_API_KEY_HERE"
      }
    },
    {
      "name": "github-mcp",
      "transport": "stdio",
      "command": "node",
      "args": ["./node_modules/@modelcontextprotocol/server-github/dist/index.js"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "YOUR_API_KEY_HERE"
      }
    },
    {
      "name": "firecrawl-mcp",
      "transport": "stdio",
      "command": "node",
      "args": ["./node_modules/firecrawl-mcp/dist/index.js"],
      "env": {
        "FIRECRAWL_API_KEY": "YOUR_API_KEY_HERE"
      }
    },
    {
      "name": "stripe",
      "transport": "stdio",
      "command": "node",
      "args": [
        "./node_modules/@stripe/mcp/dist/index.js",
        "--tools=all", 
        "--api-key=YOUR_API_KEY_HERE"
      ]
    },
    {
      "name": "sequential-thinking",
      "transport": "stdio",
      "command": "node",
      "args": [
        "./node_modules/@modelcontextprotocol/server-sequential-thinking/dist/index.js"
      ]
    },
    {
      "name": "perplexity-ask",
      "transport": "stdio",
      "command": "node",
      "args": [
        "./node_modules/server-perplexity-ask/dist/index.js"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "YOUR_API_KEY_HERE"
      }
    },
    {
      "name": "linkup",
      "transport": "stdio",
      "command": "node",
      "args": ["./node_modules/linkup-mcp-server/dist/index.js"],
      "env": {
        "LINKUP_API_KEY": "{LINKUP_API_KEY}"
      }
    },
    {
      "name": "puppeteer",
      "transport": "stdio",
      "command": "node",
      "args": ["./node_modules/@modelcontextprotocol/server-puppeteer/dist/index.js"]
    }
  ]
}
